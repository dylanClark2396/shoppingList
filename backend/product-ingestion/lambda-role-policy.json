{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ReadSourceExcel",
      "Effect": "Allow",
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:::convert-product-excel/*"
    },
    {
      "Sid": "WriteProductImages",
      "Effect": "Allow",
      "Action": "s3:PutObject",
      "Resource": "arn:aws:s3:::product-data-images-882938390228/*"
    },
    {
      "Sid": "WriteProductsTable",
      "Effect": "Allow",
      "Action": [
        "dynamodb:PutItem",
        "dynamodb:BatchWriteItem"
      ],
      "Resource": "arn:aws:dynamodb:us-east-2:882938390228:table/Products"
    },
    {
      "Sid": "WriteLogs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:us-east-2:882938390228:log-group:/aws/lambda/product-ingestion:*"
    }
  ]
}
